{
  "name": "ts-monorepo",
  "private": true,
  "engines": {
    "node": ">=18.18.0",
    "yarn": ">=1.22.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "test": "jest",
    "build": "lerna run build",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "start": "ts-node -r tsconfig-paths/register index.ts",
    "dev": "ts-node-dev -r tsconfig-paths/register --respawn --transpile-only index.ts",
    "postinstall": "husky",
    "clean": "rimraf packages/*/dist dist packages/*/tsconfig.tsbuildinfo"
  },
  "devDependencies": {
    "@babel/core": "^7.24.0",
    "@babel/preset-env": "^7.24.0",
    "@babel/preset-typescript": "^7.24.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lerna": "^8.1.2",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "nodemon": "^3.1.0",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "rimraf": "^5.0.5"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint",
      "prettier --write"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}
